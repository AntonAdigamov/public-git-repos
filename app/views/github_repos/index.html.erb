<div>
  <div>
    <% if flash[:alert] %>
      <div><%= flash[:alert] %></div>
    <% end %>
    <div>
      <%= form_with(url: search_path, method: 'get', local: true) do %>
        <div class="form-group">
          <%= label_tag :owner, "Type a repository owner's name"%>
          <%= text_field_tag 'filters[owner]', nil, placeholder: 'Eg. wycats', class: 'form-control' %>
        </div>
        <%= button_tag 'Search' %>
      <% end %>
    </div>
  </div>
</div>
